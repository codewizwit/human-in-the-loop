{
  "name": "human-in-the-loop",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "nx test cli",
    "test:watch": "nx test cli --watch",
    "test:coverage": "nx test cli --coverage",
    "test:all": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "lint:cli": "nx lint cli",
    "lint:fix": "nx run-many --target=lint --all --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md,yml,yaml}\"",
    "typecheck": "tsc -p tsconfig.base.json --noEmit",
    "build": "nx build cli && ./scripts/build/add-shebang.sh",
    "ci:local": "pnpm lint && pnpm format:check && pnpm typecheck && pnpm build && pnpm test",
    "ci:full": "pnpm format && pnpm lint && pnpm typecheck && pnpm build && pnpm test && pnpm check-links",
    "validate": "pnpm format && pnpm lint && pnpm typecheck && pnpm build && pnpm test && pnpm check-links",
    "check-links": "./src/governance/checks/check-links.sh",
    "test:regression": "./scripts/test-cli-regression.sh",
    "publish:prepare": "./scripts/publish/prepare-release.sh",
    "publish:dry-run": "cd dist/src/cli && npm publish --dry-run",
    "commit": "cz",
    "release": "standard-version --path src/cli --tag-prefix v"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
