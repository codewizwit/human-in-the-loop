    "@jest/globals": "^30.2.0",
    "@nx/devkit": "21.6.4",
    "@nx/esbuild": "21.6.4",
    "@nx/eslint": "^21.6.4",
    "@nx/eslint-plugin": "^21.6.4",
    "@nx/jest": "^21.6.4",
    "@nx/js": "^21.6.4",
    "@nx/next": "^21.6.4",
    "@nx/node": "^21.6.4",
    "@nx/playwright": "21.6.4",
    "@playwright/test": "^1.36.0",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.6.0",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/jest": "^30.0.0",
    "@types/node": "20.19.9",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "autoprefixer": "^10.4.21",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.19.2",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "markdown-link-check": "^3.14.1",
    "nx": "^21.6.4",
    "postcss": "^8.5.6",
    "prettier": "^2.6.2",
    "standard-version": "^9.5.0",
    "tailwindcss": "^4.1.14",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.3.0",
    "typescript": "^5.9.3"
  },
